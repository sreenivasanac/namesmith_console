// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  previewFeatures = ["postgresqlExtensions"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model DomainNamesBasicInfo {
  id                    String   @id @default(cuid())
  name                  String   @unique
  length                Int
  tld                   String
  possibleCategories    String[]
  possibleKeywords      String[]
  memorabilityScore     Float
  pronounceabilityScore Float
  brandabilityScore     Float
  availabilityStatus    String
  generatedByBot        String?
  createdAt             DateTime @default(now())
  updatedAt             DateTime @updatedAt
  description           String?

  detailedInfo DomainDetailedInfo?
}

model DomainDetailedInfo {
  id                     String   @id @default(cuid())
  domainId               String   @unique
  domain                 Domain   @relation(fields: [domainId], references: [id])
  seoKeywordRelevanceScore Int?
  industryRelevanceScore   Int?
  domainAge              Int?
  potentialResaleValue   Float?
  language               String?
  trademarkStatus        String?
  scoredByBot            String
  lastUpdated            DateTime @updatedAt
}